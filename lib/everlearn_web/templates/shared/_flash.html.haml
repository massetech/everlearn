%flash.flash
  .container
    - if get_flash(@conn, :info) do
      .card.green.darken-2.flash_msg.z-depth-4
        .row
          .col.s12.m10
            .card-content.white-text
              %p= get_flash(@conn, :info)
    - if get_flash(@conn, :error) do
      .card.red.darken-2.flash_msg.z-depth-4
        .row
          .col.s12.m10
            .card-content.white-text
              %p= get_flash(@conn, :error)

