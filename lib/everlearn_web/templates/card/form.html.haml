- form_for @changeset, @action, fn f ->
  = hidden_input f, :item_id
  .row
    .input-field.col.s12
      = select f, :language_id, @filtered_languages
      = label f, :language_id
    .input-field.col.s12
      = label f, :question, "Question"
      = text_input f, :question, class: "validate", type: "text"
    .input-field.col.s12
      = label f, :answer, "Answer"
      = text_input f, :answer, class: "validate", type: "text"
    .input-field.col.s12
      = label f, :sound, "Sound url"
      = text_input f, :sound, class: "validate", type: "text"
    .input-field.col.s12
      = label f, :phonetic, "Phonetic"
      = text_input f, :phonetic, class: "validate", type: "text"
    .switch.col.s12
      %label
        = "Off"
        = checkbox f, :active
        %span.lever
        = "On"
  .row
    = submit "Save", class: "btn-large waves-effect waves-light btn-action"

