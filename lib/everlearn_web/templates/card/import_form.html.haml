- form_for @changeset, @action, [multipart: true], fn f ->
  .row
    .input-field.col.s6
      = select f, :topic_id, @topics
      = label f, :topic_id
    .input-field.file-field.col.s6
      .btn
        %span= "Upload file"
        = file_input f, :file
      .file-path-wrapper
        = text_input f, :title, class: "file-path validate", placeholder: "Select your file"

  .row
    = submit "Submit", class: "btn btn-primary"
