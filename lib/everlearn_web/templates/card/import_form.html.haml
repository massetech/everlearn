- form_for @changeset, @import_action, [multipart: true], fn f ->
  .row
    .col.s12.m3
      .input-field
        = select f, :language_id, @languages
        = label f, :language_id
    .col.s12.m5
      .input-field.file-field
        .btn.import-file
          -# %span= "File.csv"
          = file_input f, :file, class: "validate", required: ""
        .file-path-wrapper
          = text_input f, :title, class: "file-path validate", placeholder: "File.csv"
    .col.s12.m4
      %button.btn-large.waves-effect.waves-light.btn-action{type: "submit", name:"action"}
        ="Upload cards"
        %i.material-icons.right="cloud_upload"
