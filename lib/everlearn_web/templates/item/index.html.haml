.row.valign-wrapper
  .col.s12.m10
    %h3= "Items"
  .col.s12.m2.center-align
    - link to: item_path(@conn, :new), class: "btn-floating btn-large waves-effect waves-light blue valign-wrapper center-align" do
      %i.material-icons= "add"
.row
  = render CardView, "import_form.html", changeset: @changeset, topics: @topics, action: import_card_path(@conn, :import)
.row
  %table.bordered.responsive-table
    %tr
      %th.center-align= "Title"
      %th.center-align= "Topic"
      %th.center-align= "Group"
      %th.center-align= "Level"
      %th.center-align= "Description"
      %th.center-align= "Active"
      %th.center-align= "Actions"
    - for item <- @items do
      %tr
        %td.center-align= item.title
        %td.center-align= item.topic.title
        %td.center-align= item.group
        %td.center-align= item.level
        %td.center-align= item.description
        %td.center-align
          - if item.active == true do
            %i.material-icons.green-text.darken-4= "check_circle"
          - else
            %i.material-icons.red-text.darken-4= "cancel"
        %td.center-align
          -# - link to: item_path(@conn, :edit, item), class: "waves-effect waves-light marged" do
          -#   %i.material-icons.indigo-text.darken-4= "remove_red_eye"
          - link to: item_path(@conn, :edit, item), class: "waves-effect waves-light marged" do
            %i.material-icons.blue-grey-text.darken-4= "edit"
          - link to: item_path(@conn, :delete, item), method: :delete, data: [confirm: "Are you sure?"], class: "waves-effect waves-light marged" do
            %i.material-icons.red-text.accent-4= "delete_forever"
