- form_for @changeset, @action, fn f ->
  .section
    .container
      .row
        .input-field.col.s12.m4
          = select f, :classroom_id, @classrooms
          = label f, :classroom_id
        .input-field.col.s12.m10.offset-m1
          = text_input f, :title, class: "validate", type: "text"
          = label f, :title
          = error_tag f, :title

  .section
    .form-group.center-align
      = submit "Submit", class: "btn-large waves-effect waves-light teal accent-4"
