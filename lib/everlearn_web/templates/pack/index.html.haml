.row.valign-wrapper
  .col.s12.m10
    %h3= "Packs"
  .col.s12.m2.center-align
    - link to: pack_path(@conn, :new), class: "btn-floating btn-large waves-effect waves-light blue valign-wrapper center-align" do
      %i.material-icons= "add"
.row
  %table.bordered.responsive-table
    %tr
      %th.center-align= "Title"
      %th.center-align= "Classroom"
      %th.center-align= "Level"
      %th.center-align= "Description"
      %th.center-align= "Active"
      %th.center-align= "Actions"
    - for pack <- @packs do
      %tr
        %td.center-align= pack.title
        %td.center-align= pack.classroom.title
        %td.center-align= pack.level
        %td.center-align= pack.description
        %td.center-align
          - if pack.active == true do
            %i.material-icons.green-text.darken-4= "check_circle"
          - else
            %i.material-icons.red-text.darken-4= "cancel"
        %td.center-align
          - link to: pack_path(@conn, :show, pack), class: "waves-effect waves-light marged" do
            %i.material-icons.indigo-text.darken-4= "remove_red_eye"
          - link to: pack_path(@conn, :edit, pack), class: "waves-effect waves-light marged" do
            %i.material-icons.blue-grey-text.darken-4= "edit"
          - link to: pack_path(@conn, :delete, pack), method: :delete, data: [confirm: "Are you sure?"], class: "waves-effect waves-light marged" do
            %i.material-icons.red-text.accent-4= "delete_forever"

.row
  = pagination_link(@conn, @rummage)
